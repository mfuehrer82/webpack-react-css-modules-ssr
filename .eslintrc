{
  "root": true,
  "extends": ["xo/esnext", "xo-react"],
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
    "indent": [2, 4],
    "react/jsx-indent": [2, 4],
    "babel/new-cap": 0,
    "babel/arrow-parens": 0,
    "babel/object-curly-spacing": [2, "always"],
    "max-len": [
      "error",
      {
        "code": 100,
        "comments": 100,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "tabWidth": 4
      }
    ]
  }
}
